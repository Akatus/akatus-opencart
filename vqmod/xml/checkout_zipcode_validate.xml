<?xml version="1.0" encoding="UTF-8"?>
<modification>
	<id>Modifica a validação do Zipcode no register checkout (CEP).</id>
	<version>1.0</version>
	<vqmver>2.2.1</vqmver>
	<author>Akatus</author>
	
	<!-- Inicio: catalog/controller/checkout/*.php -->
	<file path="catalog/controller/checkout/" name="checkout.php">
		<operation>
			<search regex="true" position="replace"><![CDATA[~if\s*.*\['postcode'\]\)*.*~]]></search>
			<add><![CDATA[if ( strlen(preg_replace("/[^0-9]/","",$this->request->post['postcode'])) != 8 ) {]]></add>
		</operation>

		<operation>
			<search regex="true" position="replace"><![CDATA[~if\s*.*\['shipping_postcode'\]\)\s!=*.*~]]></search>
			<add><![CDATA[if ( strlen(preg_replace("/[^0-9]/","",$this->request->post['shipping_postcode'])) != 8 ) {]]></add>
		</operation>
	</file>
	<!-- Fim: catalog/controller/checkout/*.php -->

</modification>